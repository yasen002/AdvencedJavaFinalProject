<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="CreateAccountAnchorPane" prefHeight="700.0" prefWidth="500.0" style="-fx-background-color: #0ABDE3;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectFile.CreateAccountController">
   <children>
      <VBox layoutX="50.0" layoutY="100.0" prefHeight="500.0" prefWidth="400.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                   <TextField fx:id="firstnameField" promptText="First Name" style="-fx-background-color: #3498DB;">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="lastnameField" promptText="Last Name" style="-fx-background-color: #3498DB;">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: #3498DB;">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                  <TextField fx:id="usernameField" promptText="User Name" style="-fx-background-color: #3498DB;">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></TextField>
                  <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #3498DB;">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></PasswordField>

               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="createAccBtn" mnemonicParsing="false" onMouseClicked="#handleNewAccount" style="-fx-background-color: #4BCFFA;" text="Create" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
